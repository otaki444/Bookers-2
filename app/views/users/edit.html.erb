<div class="container">
	<div class="row">
		<div class="col-sm-offset">
<h2>User info</h2>
<%= form_for(@user) do |f| %>
<div class="form-group has-icon">
	<label for="user_name">Name</label>
	 <%= f.text_field :name, id:"user_name" %>
	 <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>
<div class="form-group has-icon">
    <label for="inputEmail">Image</label>
    <%= f.attachment_field :profile_image, class: "user-edit-form" %>
</div>
<div>
	<label for="user_introduction">Introduction</label>
	 <%= f.text_area :introduction %>
</div>

<%= f.submit "Update User" %>
<% end %>
<p class="text-right">CopyRight Infratop.inc</p>
		</div>
	</div>
</div>
