<div class="container">
<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @booknew %>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td><%= link_to user_path(@book.user.id) do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %><%= @book.user.name %>
							<% end %>
							</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<td id="favorite-<%= @book.id %>">
							<%= render partial: 'favorites/favorite', locals: { book: @book} %>
						</td>
						<td><p>コメント数 : <%= @book.book_comments.count %></p>
						</td>
					  		<% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
						<td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger", data: { confirm: "本当に消しますか?" } %></td>
					  		<% end %>
					</tr>
				</tbody>
			</table>
			<div id="comments-<%= @book_comment.id %>">
				<%= render partial: 'book_comments/comment', locals: { book: @book} %>
			</div>
			<div id="comment_form">
				<%= render partial: 'book_comments/form', locals: { book: @book, book_comment: @book_comment} %>
			</div>
		</div>
		<div><p class="text-right">CopyRight Infratop.inc</p></div>
	</div>
</div>

